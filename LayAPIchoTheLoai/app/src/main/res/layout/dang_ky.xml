<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dkdn">

    <TextView
        android:id="@+id/tv_dang_ky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ĐĂNG KÝ"

        android:layout_marginTop="100dp"
        android:textColor="#ffffff"
        app:layout_constraintBottom_toTopOf="@id/tv_email"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:textSize="40dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints" />

    <TextView

        android:layout_marginTop="15dp"
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        app:layout_constraintBottom_toTopOf="@id/et_taikhoan"
        app:layout_constraintTop_toBottomOf="@id/tv_dang_ky"
        app:layout_constraintRight_toLeftOf="@id/tv_dang_ky"
        app:layout_constraintLeft_toLeftOf="parent"

        android:text="Email"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#ffffff"
        tools:ignore="MissingConstraints" />
    
    <EditText


        android:layout_marginTop="15dp"
        android:id="@+id/et_taikhoan"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        app:layout_constraintTop_toBottomOf="@id/tv_email"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="#FFFFFF"
        app:layout_constraintBottom_toTopOf="@id/tv_matkhau"
        android:textColor="#602A81"
        android:hint="Ví dụ: abc@gmail.com"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/tv_matkhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mật khẩu"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:textStyle="bold"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="15dp"
        app:layout_constraintRight_toLeftOf="@id/tv_dang_ky"
        app:layout_constraintBottom_toTopOf="@id/et_matkhau"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/et_taikhoan"
        tools:ignore="MissingConstraints" />

    <EditText
        android:id="@+id/et_matkhau"
        android:layout_width="match_parent"
        android:layout_height="48dp"


        android:layout_marginTop="15dp"
        app:layout_constraintTop_toBottomOf="@id/tv_matkhau"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        app:layout_constraintBottom_toTopOf="@id/btn_dang_ky"

        android:layout_marginBottom="100dp"
        android:background="#FFFFFF"
        android:textColor="#602A81"
        android:hint="******"
        android:password="true"
        tools:ignore="MissingConstraints" />
        <Button
            android:layout_width="170dp"
            android:id="@+id/btn_dang_ky"
            android:layout_height="wrap_content"
            android:text="Đăng Ký"

            app:layout_constraintTop_toBottomOf="@id/et_matkhau"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginBottom="150dp"
            app:layout_constraintBottom_toBottomOf="parent"

            android:backgroundTint="#FFFFFF"
            android:textColor="#602A81"
            android:textSize="24dp"
            android:textStyle="bold"
            tools:ignore="MissingConstraints">
        </Button>
    </androidx.constraintlayout.widget.ConstraintLayout>

