<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/dkdn">

    <TextView
        android:id="@+id/tv_dang_ky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:text="ĐĂNG KÝ TÀI KHOẢN"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_dang_ky"
        android:layout_marginStart="16dp"
        android:layout_marginTop="18dp"
        android:text="Email đăng nhập"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/et_taikhoan"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_taikhoan"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="#ffffff"
        android:textColor="#602A81"
        android:hint="Ví dụ: abc@gmail.com"/>

    <TextView
        android:id="@+id/tv_matkhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/et_taikhoan"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Mật khẩu"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/et_matkhau"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_matkhau"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:background="#ffffff"
        android:textColor="#602A81"
        android:hint="******"
        android:password="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/et_matkhau"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/baseline_check_24"
                android:gravity="center" />
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Chứa ít nhất 8 ký tự"
            android:textColor="#ffffff"
            android:textStyle="bold|italic"
            android:textSize="16dp"
            android:gravity="center|start"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/et_matkhau"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv2"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/baseline_check_24"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Chứa ít nhất 1 ký tự in hoa"
            android:textColor="#ffffff"
            android:textStyle="bold|italic"
            android:textSize="16dp"
            android:gravity="center|start"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/et_matkhau"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv3"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/baseline_check_24"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Chứa ít nhất 1 ký tự in thường"
            android:textColor="#ffffff"
            android:textStyle="bold|italic"
            android:textSize="16dp"
            android:gravity="center|start"
            android:layout_marginStart="10dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_marginTop="8dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/et_matkhau"
        android:orientation="horizontal"
        android:gravity="center">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv4"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_marginStart="16dp"
            android:layout_gravity="center">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/baseline_check_24"
                android:gravity="center"/>
        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Chứa ít nhất 1 số"
            android:textColor="#ffffff"
            android:textStyle="bold|italic"
            android:textSize="16dp"
            android:gravity="center|start"
            android:layout_marginStart="10dp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/tv_maxacnhan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/et_taikhoan"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Xác thực tài khoản"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:layout_marginTop="20dp"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="6">

        <Button
            android:id="@+id/btn_verify"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="#003651"
            android:gravity="center"
            android:text="Verify"
            android:textColor="#FFFFFF"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_luuy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="20dp"
            android:layout_below="@id/btn_verify"
            android:gravity="center"
            android:text="Sau khi bạn đã nhập đầy đủ thông tin đăng ký, xin bạn hãy click vào 'Verify' để xác thực tài khoản."
            android:textStyle="bold|italic"
            android:textSize="18dp"
            android:textColor="#ffffff"/>

        <TextView
            android:id="@+id/tv_luuy1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="12dp"
            android:layout_below="@id/tv_luuy"
            android:gravity="center"
            android:text="Một khi tài khoản được xác thực, bạn có thể dùng tài khoản để đăng nhập thẳng vào ứng dụng."
            android:textStyle="bold|italic"
            android:textSize="18dp"
            android:textColor="#ffffff"/>
    </LinearLayout>


</LinearLayout>

