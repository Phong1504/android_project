<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/custom_background2"
    tools:context=".Activity.PlayNhacActivity">
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarPlaynhac"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize">

    </androidx.appcompat.widget.Toolbar>
    <androidx.viewpager.widget.ViewPager
        android:id="@+id/viewPagerPlaynhac"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8">

    </androidx.viewpager.widget.ViewPager>
    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="0dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="10">
            <TextView
                android:text="00:00"
                android:layout_weight="0.5"
                android:id="@+id/tvTimeSong"
                android:textStyle="bold"
                android:textSize="16dp"
                android:gravity="center"
                android:textColor="@color/white"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
            <SeekBar
                android:id="@+id/seekbarSong"
                android:layout_weight="9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </SeekBar>

            <TextView
                android:textStyle="bold"
                android:layout_weight="0.5"
                android:textSize="16dp"
                android:text="00:00"
                android:textColor="@color/white"
                android:gravity="center"
                android:id="@+id/tvTotalTimesong"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

            </TextView>
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp">
            <ImageButton
                android:src="@drawable/iconsuffle"
                android:scaleType="fitXY"
                android:background="@null"
                android:id="@+id/imgbuttonSuffle"
                android:layout_marginRight="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="40dp"
                android:layout_height="40dp"/>
            <ImageButton
                android:src="@drawable/iconpreview"
                android:scaleType="fitXY"
                android:background="@null"
                android:id="@+id/imgbuttonPre"
                android:layout_marginRight="15dp"
                android:layout_width="60dp"
                android:layout_height="60dp">

            </ImageButton>
            <ImageButton
                android:src="@drawable/iconplay"
                android:scaleType="fitXY"
                android:background="@null"
                android:id="@+id/imgbuttonplay"
                android:layout_marginRight="15dp"
                android:layout_width="60dp"
                android:layout_height="60dp">

            </ImageButton>
            <ImageButton
                android:src="@drawable/iconnext"
                android:scaleType="fitXY"
                android:id="@+id/imgbuttonNext"
                android:background="@null"
                android:layout_marginRight="10dp"
                android:layout_width="60dp"
                android:layout_height="60dp">

            </ImageButton>
            <ImageButton
                android:src="@drawable/iconrepeat"
                android:scaleType="fitXY"
                android:background="@null"
                android:id="@+id/imgbuttonrepeat"
                android:layout_marginRight="5dp"
                android:layout_width="40dp"
                android:layout_height="40dp">

            </ImageButton>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>