<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6338AF">

    <TextView
        android:id="@+id/tv_quen_mat_khau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="145dp"
        android:text="QUÊN MẬT KHẨU?"
        android:textSize="36dp"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/tv_slogan_quen_mat_khau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/tv_quen_mat_khau"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/slogan_quen_mat_khau"
        android:textSize="18dp"
        android:textStyle="italic"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/tv_taikhoanlaylaimatkhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_slogan_quen_mat_khau"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Email"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/et_taikhoanlaylaimatkhau"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_taikhoanlaylaimatkhau"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="#8C5FDC"
        android:hint="Nhập email của bạn"/>

    <Button
        android:id="@+id/btn_lay_lai_mat_khau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_gravity="center"
        android:layout_below="@id/et_taikhoanlaylaimatkhau"
        android:background="#003651"
        android:text="LẤY LẠI MẬT KHẨU"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btn_lay_lai_mat_khau_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:layout_gravity="center"
        android:layout_below="@id/btn_lay_lai_mat_khau"
        android:background="#003651"
        android:text="QUAY LẠI"
        android:textStyle="bold"
        android:textSize="24dp"
        android:textColor="#FFFFFF"/>

</LinearLayout>