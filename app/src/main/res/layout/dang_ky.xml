<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#6338AF">

    <TextView
        android:id="@+id/tv_dang_ky"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:text="ĐĂNG KÝ TÀI KHOẢN"
        android:textStyle="bold"
        android:textSize="36dp"
        android:textColor="#ffffff" />

    <TextView
        android:id="@+id/tv_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_dang_ky"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Email đăng nhập"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#ffffff" />
    
    <EditText
        android:id="@+id/et_taikhoan"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_taikhoan"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="#8C5FDC"
        android:hint="Ví dụ: abc@gmail.com"/>

    <TextView
        android:id="@+id/tv_matkhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/et_taikhoan"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Mật khẩu"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#ffffff"/>

    <EditText
        android:id="@+id/et_matkhau"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_matkhau"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:background="#8C5FDC"
        android:textColor="#ffffff"
        android:hint="******"
        android:password="true"/>





    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <Button
            android:id="@+id/btn_dang_ky"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#003651"
            android:text="ĐĂNG KÝ"
            android:textColor="#FFFFFF"
            android:textSize="24dp"
            android:textStyle="bold" />
    </LinearLayout>


</LinearLayout>
