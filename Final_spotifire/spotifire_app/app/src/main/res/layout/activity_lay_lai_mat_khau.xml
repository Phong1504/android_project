<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/unqqq">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_gravity="center"
        app:cardElevation="20dp">
        <LinearLayout

            android:background="@drawable/gradient_custem"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_quen_mat_khau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:text="QUÊN MẬT KHẨU?"
        android:textSize="25dp"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/tv_slogan_quen_mat_khau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_below="@+id/tv_quen_mat_khau"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:text="@string/slogan_quen_mat_khau"
        android:textSize="15dp"
        android:textStyle="italic"
        android:textColor="#ffffff"/>

    <TextView
        android:id="@+id/tv_taikhoanlaylaimatkhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_slogan_quen_mat_khau"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Email"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#ffffff" />

    <EditText
        android:id="@+id/et_taikhoanlaylaimatkhau"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_taikhoanlaylaimatkhau"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:background="#DAD6E1"
        android:hint="Nhập email của bạn"/>

    <Button
        android:id="@+id/btn_lay_lai_mat_khau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:layout_gravity="center"
        android:layout_below="@id/et_taikhoanlaylaimatkhau"
        android:backgroundTint="#13181B"
        android:text="LẤY LẠI MẬT KHẨU"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#FFFFFF"/>

    <Button
        android:id="@+id/btn_lay_lai_mat_khau_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_gravity="center"
        android:layout_below="@id/btn_lay_lai_mat_khau"
        android:backgroundTint="#0E0E0E"
        android:text="QUAY LẠI"
        android:textStyle="bold"
        android:textSize="20dp"
        android:textColor="#FFFFFF"/>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>