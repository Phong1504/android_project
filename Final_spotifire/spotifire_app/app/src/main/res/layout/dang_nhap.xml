<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/unqqq">
    <androidx.cardview.widget.CardView
        android:layout_marginTop="100dp"
        android:layout_marginBottom="100dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="30dp"
        android:layout_gravity="center"
        app:cardElevation="20dp">
        <LinearLayout

            android:background="@drawable/gradient_custem"
            android:orientation="vertical"
            android:padding="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_dang_nhap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="6dp"
        android:text="ĐĂNG NHẬP"
        android:textStyle="bold"
        android:textSize="30dp"
        android:textColor="#FBFBFB" />

    <TextView
        android:id="@+id/tv_taikhoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_dang_ky"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Email"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#FFFFFF" />

    <EditText
        android:id="@+id/et_taikhoan"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_taikhoan"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:background="#FFFFFF"
        android:textColor="#602A81"
        android:hint="Nhập email của bạn"/>

    <TextView
        android:id="@+id/tv_matkhau"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/et_taikhoan"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:text="Mật khẩu"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="#FBFBFB"/>

    <EditText
        android:id="@+id/et_matkhau"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/tv_matkhau"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="12dp"
        android:background="#FFFFFF"
        android:textColor="#602A81"
        android:hint="******"
        android:password="true"/>

    <CheckBox
        android:id="@+id/cb_nhotaikhoan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/et_matkhau"
        android:layout_marginStart="11dp"
        android:layout_marginTop="13dp"
        android:outlineAmbientShadowColor="#602A81"
        android:outlineSpotShadowColor="#602A81"
        android:text="Lưu mật khẩu"
        android:textStyle="bold"
        android:textColor="#050202"
        android:textSize="20sp" />



    <LinearLayout
        android:orientation="vertical"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/btn_dang_nhap"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:gravity="center"
            android:backgroundTint="#FFFFFF"
            android:textColor="#0A0A0B"
            android:text="ĐĂNG NHẬP"
            android:textStyle="bold"
            android:textSize="24dp"/>


        <Button
            android:id="@+id/btn_quen_mat_khau"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="0dp"
            android:layout_below="@id/btn_dang_nhap"
            android:gravity="center"
            android:text="Quên mật khẩu?"
            android:backgroundTint="#FFFFFF"
            android:textColor="#090909"
            android:textStyle="italic|bold"
            android:textSize="18dp"/>

    </LinearLayout>

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>